<Page x:Class="PRAK1_2345.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PRAK1_2345"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Margin="16" Padding="12" Height="42" FontWeight="bold" Foreground="#243238" >Введите а</TextBlock>
        <TextBox x:Name="TextBox1" Grid.Row="0" Grid.Column="1" Margin="16" Padding="12" Height="50" />

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="16" Padding="12" Height="42" FontWeight="bold" Foreground="#243238" >Y = </TextBlock>
        <TextBox x:Name="TextBox2" Grid.Row="1" Grid.Column="1" Margin="16" Padding="12" Height="50" IsReadOnly="True"/>

        <Button Content="Решить" Grid.Row="2" Grid.ColumnSpan="2" Height="50"  Foreground="#FFF6A5" Background="Black" Click="Button_Click" />
    </Grid>
</Page>
